{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body %}
	<div class="home">
		<div class="contact">
			<div class="container text-center">
				<div class="container">
					<div class="row">
						<div class="col">
							<h1>Me contacter</h1>
							{{ form_start(form) }}
							{{ form_errors(form) }}
							<div class="row">
								<div class="col-md-6 mb-3">
									{{ form_row(form.firstname, {'attr': {'class': 'form-control mb-3'}}) }}
									{{ form_row(form.lastname, {'attr': {'class': 'form-control mb-3'}}) }}
								</div>
								<div class="col-md-6 mb-3">
									{{ form_row(form.phone, {'attr': {'class': 'form-control mb-3'}}) }}
									{{ form_row(form.email, {'attr': {'class': 'form-control mb-3'}}) }}
								</div>
								<div class="col-md-6 mb-3">
									{{ form_row(form.content, {'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<button class="custom-btn  mt-3 mb-10" type="submit">
								<span>Nous contacter</span>
							</button>
							{{ form_end(form) }}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
